<div class="jumbotron text-center">Burgers</div>
    <div class="container">
        <div class="row">
            <div id="left" class="col-6">
                <p>These are the burgers on the Left (uneaten)</p>
                <ul>
                {{#each burgers}}
                  {{#unless devoured}}
                    {{> burger-block dev=false}}
                  {{/unless}}
                {{/each}}
                </ul>
            </div>
            <div id="right" class="col-6">
                <p>These are the burgers on the Right (eaten)</p>
                <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger-block dev=true}}
                {{/if}}
                {{/each}}
                </ul>
            </div>
        </div>
    </div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>
